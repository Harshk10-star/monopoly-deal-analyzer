# Environment Configuration for Monopoly Deal Analyzer
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_database_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_secure_database_password@localhost:5432/monopoly_deal

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# For development
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# =============================================================================
# STRIPE CONFIGURATION (Optional - for payments)
# =============================================================================
# Test keys (start with sk_test_ and pk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Production keys (start with sk_live_ and pk_live_)
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_ENVIRONMENT=development

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# For production deployment
DOMAIN=yourdomain.com
SSL_EMAIL=your-email@domain.com

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for development with hot reload
# BACKEND_RELOAD=true
# FRONTEND_DEV_SERVER=true